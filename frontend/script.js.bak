    fileName.textContent = file.name;
    clearFileBtn.style.display = 'inline-block';

    try {
        const fileExtension = file.name.split('.').pop().toLowerCase();
        
        if (fileExtension === 'csv') {
            await readCSV(file);
        } else if (fileExtension === 'xlsx' || fileExtension === 'xls') {
            await readExcel(file);
        } else {
            alert('Ch·ªâ h·ªó tr·ª£ file .csv, .xlsx, .xls');
            clearFile();
        }
    } catch (error) {
        console.error('Error reading file:', error);
        alert('L·ªói ƒë·ªçc file: ' + error.message);
        clearFile();
    }
}

function readCSV(file) {
    return new Promise((resolve, reject) => {
        const reader = new FileReader();
        
        reader.onload = (e) => {
            try {
                const text = e.target.result;
                const lines = text.split('\n').filter(line => line.trim());
                
                if (lines.length === 0) {
                    reject(new Error('File CSV r·ªóng'));
                    return;
                }
                
                // Parse CSV (simple parser, assumes comma delimiter)
                const data = lines.map(line => {
                    // Handle quoted fields
                    const fields = [];
                    let current = '';
                    let inQuotes = false;
                    
                    for (let i = 0; i < line.length; i++) {
                        const char = line[i];
                        if (char === '"') {
                            inQuotes = !inQuotes;
                        } else if (char === ',' && !inQuotes) {
                            fields.push(current.trim());
                            current = '';
                        } else {
                            current += char;
                        }
                    }
                    fields.push(current.trim());
                    return fields;
                });
                
                currentFileData = data;
                displayFilePreview(data);
                resolve();
            } catch (error) {
                reject(error);
            }
        };
        
        reader.onerror = () => reject(new Error('Kh√¥ng th·ªÉ ƒë·ªçc file'));
        reader.readAsText(file);
    });
}

function readExcel(file) {
    return new Promise((resolve, reject) => {
        const reader = new FileReader();
        
        reader.onload = (e) => {
            try {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                
                // Get first sheet
                const firstSheetName = workbook.SheetNames[0];
                const worksheet = workbook.Sheets[firstSheetName];
                
                // Convert to array of arrays
                const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
                
                if (jsonData.length === 0) {
                    reject(new Error('Sheet Excel r·ªóng'));
                    return;
                }
                
                currentFileData = jsonData;
                displayFilePreview(jsonData);
                resolve();
            } catch (error) {
                reject(error);
            }
        };
        
        reader.onerror = () => reject(new Error('Kh√¥ng th·ªÉ ƒë·ªçc file'));
        reader.readAsArrayBuffer(file);
    });
}

function displayFilePreview(data) {
    if (!data || data.length === 0) return;
    
    filePreview.style.display = 'block';
    
    // Build preview table (max 10 rows)
    const previewRows = data.slice(0, 10);
    let tableHTML = '<table><thead><tr>';
    
    // Header
    const headers = data[0];
    headers.forEach((header, index) => {
        tableHTML += `<th>${escapeHtml(String(header || `Col${index + 1}`))}</th>`;
    });
    tableHTML += '</tr></thead><tbody>';
    
    // Rows
    for (let i = 1; i < previewRows.length; i++) {
        tableHTML += '<tr>';
        previewRows[i].forEach(cell => {
            tableHTML += `<td>${escapeHtml(String(cell || ''))}</td>`;
        });
        tableHTML += '</tr>';
    }
    
    tableHTML += '</tbody></table>';
    
    if (data.length > 10) {
        tableHTML += `<p style="margin-top: 10px; color: #666; font-style: italic;">... v√† ${data.length - 10} d√≤ng kh√°c</p>`;
    }
    
    previewContainer.innerHTML = tableHTML;
    
    // Populate column select
    columnSelect.innerHTML = '';
    headers.forEach((header, index) => {
        const option = document.createElement('option');
        option.value = index;
        option.textContent = header || `C·ªôt ${index + 1}`;
        columnSelect.appendChild(option);
    });
}

